{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true
  },
  "include": ["./src"],
  "exclude": ["spec/", "dist/"],
  "types": ["node"]
}